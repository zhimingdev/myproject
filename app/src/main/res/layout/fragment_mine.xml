<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:title="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/icon_mine_background">

        <com.zzmfaster.myapplication.custom.titleview.TitleView
            android:id="@+id/title_mine"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            title:left_image="@drawable/icon_setting"
            title:right_image="@drawable/icon_message"
            android:layout_marginTop="20dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" />

        <ImageView
            android:id="@+id/iv_mine"
            android:layout_below="@id/title_mine"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/icon_avatar"/>

        <TextView
            android:layout_centerHorizontal="true"
            android:layout_below="@id/iv_mine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="12dp"
            android:text="登录/注册"
            android:textColor="@color/text_color"/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="我的页面"
        android:gravity="center"/>

</LinearLayout>
